<div class="new-bg">
  <h1>Add a new quantity to <%= @item.name %>:</h1>
  <div class="new-item-main">
    <div class="new-item-img-upload item-header-img">
      <div class="header-img"></div>
    </div>
    <div class="new-item-form">
      <%= form_for([@item, @item_amount]) do |f| %>
        <%= f.label :amount %>
        <%= f.number_field :amount,
                           required: true, 
                           label: false, 
                           autofocus: true,
                           placeholder: "10",
                           :class => 'new_form_input' %>
        <%= f.label :exp_date %>
        <%= f.date_field :exp_date,
                         required: true, 
                         label: false, 
                         autofocus: true,
                         :class => 'new_form_input' %>
        <%= f.submit 'Add', :class => 'login-signup' %>
      <% end %>
    </div>
  </div>
</div>
